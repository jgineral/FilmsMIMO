<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">10dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="BottonNavigationStyle">
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="android:theme">@style/AppTheme</item>
    </style>

    <style name="ImageDetailStyle">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="TitleDetailStyle">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">75dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/carter_one</item>
    </style>

    <style name="FavoriteImgStyle">
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="InfoTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <style name="InfoTitleTextStyle">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/carter_one</item>
    </style>

    <style name="InfoOverviewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="PresentacionInfoStyle">
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonWithTextIconStyle">
        <item name="android:background">@color/primary_light</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:drawableEnd">@drawable/file_download</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ToolbarStyle"/>

        <ImageView
            android:id="@+id/ivBackdrop"
            android:layout_width="302dp"
            android:layout_height="152dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            style="@style/ImageDetailStyle"
            android:contentDescription="@string/imagemovie" />


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivFavorite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivBackdrop"
            app:layout_constraintVertical_bias="0.089"
            tools:text="Title"
            style="@style/TitleDetailStyle"/>

        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="28dp"
            android:layout_height="27dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivBackdrop"
            tools:srcCompat="@drawable/star_off"
            style="@style/FavoriteImgStyle"
            android:contentDescription="@string/imagemovie" />

        <TextView
            android:id="@+id/tvAverage"
            android:layout_width="239dp"
            android:layout_height="35dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="9,5"
            style="@style/InfoTextStyle"/>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/average"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            style="@style/InfoTitleTextStyle" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAverage"
            style="@style/InfoTitleTextStyle"/>

        <TextView
            android:id="@+id/tvdate"
            android:layout_width="239dp"
            android:layout_height="35dp"
            tools:text="19/8/1992"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/InfoTextStyle"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adulto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvdate"
            style="@style/InfoTitleTextStyle"/>

        <TextView
            android:id="@+id/tvAdult"
            android:layout_width="240dp"
            android:layout_height="34dp"
            tools:text="+18"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/InfoTextStyle"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/overview"
            app:layout_constraintEnd_toStartOf="@+id/tvOverview"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAdult"
            style="@style/InfoTitleTextStyle"/>

        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            tools:text="Instead of blending whole whiskey with herring, use one package vinaigrette and two pounds corn syrup fine-mesh strainer."
            app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/InfoOverviewStyle"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>